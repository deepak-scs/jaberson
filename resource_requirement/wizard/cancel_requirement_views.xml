<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="cancel_requirement_wizard_view_form" model="ir.ui.view">
        <field name="name">cancel.requirement.wizard.form</field>
        <field name="model">cancel.requirement.wizard</field>
        <field name="arch" type="xml">
            <form string="Cancel Requirement">
                <separator string="Please enter the reason for cancelled resource requirement"/>
                <field name="reason"/>
                <footer>
                    <button string='Submit' name="cancel_requirement_reason" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
           </form>
        </field>
    </record>

    <record id="cancel_requirement_wizard_action" model="ir.actions.act_window">
        <field name="name">Cancel Requirement</field>
        <field name="res_model">cancel.requirement.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="cancel_requirement_wizard_view_form"/>
        <field name="target">new</field>
    </record>
</odoo>
